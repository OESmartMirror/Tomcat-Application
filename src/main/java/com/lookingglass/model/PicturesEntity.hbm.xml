<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.lookingglass.model.PicturesEntity" table="pictures" schema="datatable">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="userId">
            <column name="user_id" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="picture">
            <column name="picture" sql-type="longblob"/>
        </property>
        <property name="timeStamp">
            <column name="time_stamp" sql-type="timestamp"/>
        </property>
        <many-to-one name="usersByUserId" class="com.lookingglass.model.UsersEntity">
            <column name="user_id" not-null="true"/>
        </many-to-one>
    </class>
</hibernate-mapping>